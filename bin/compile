#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

whitelist_regex=${2:-''}
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD)$'}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

echo "-----> Loading environment variables"
if [ -d "$ENV_DIR" ]; then
  ls $ENV_DIR
  for e in $(ls $ENV_DIR); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" && {
        echo $e | indent
        export "$e=$(cat $ENV_DIR/$e)"
      }
      :
  done
else
  echo "Environment directory does not exist" | indent
fi


echo "-----> Running extra build steps"
$1/.extra 2>&1 | indent
